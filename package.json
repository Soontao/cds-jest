{
  "name": "cds-jest",
  "version": "1.0.0",
  "description": "jest utils for sap cap nodejs runtime",
  "main": "lib/index.js",
  "typings": "lib/index.d.js",
  "engines": {
    "node": ">=12"
  },
  "author": {
    "name": "Theo Sun"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Soontao/cds-jest"
  },
  "scripts": {
    "pretest": "bash ./setup_test.sh",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "prebuild": "rimraf lib",
    "build": "tsc",
    "postbuild": "tsc --noEmit --p tsconfig.lib.json",
    "lint": "eslint src/** --fix",
    "release": "npx standard-version --no-verify",
    "coverage": "npm test -- --coverage --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/jest-when": "^3.5.1",
    "@types/node": "^16.11.41",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "axios": "^0.27.2",
    "eslint": "^8.18.0",
    "jest": "^27.5.1",
    "jest-when": "^3.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "keywords": [
    "jest",
    "cap",
    "sap",
    "mock"
  ],
  "overrides": {
    "@sap/xsenv": "3.2.0"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "cds-internal-tool": "^1"
  }
}
