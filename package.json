    "@typescript-eslint/parser": "7.14.1",
    "axios": "1.7.2",
    "eslint": "9.6.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.5",
    "ts-node": "10.9.2",
    "typescript": "5.5.3"
  },
  "keywords": [
    "jest",
    "cap",
    "sap",
    "mock"
  ],
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "cds-internal-tool": "^1.7.0"
