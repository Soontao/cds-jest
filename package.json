    "@typescript-eslint/parser": "5.30.5",
    "axios": "0.27.2",
    "eslint": "8.18.0",
    "jest": "28.1.2",
    "jest-when": "3.5.1",
    "ts-jest": "28.0.5",
    "ts-node": "10.8.1",
    "typescript": "4.7.4"
  },
  "keywords": [
    "jest",
    "cap",
    "sap",
    "mock"
